{
  "name": "lighthouse-js",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "repository": "git@github.com:ChaoLiangSuper/LightHouse-JS.git",
  "author": "ChaoLiangSuper <cliangsuper@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start:admin": "cd ./packages/Lighthouse-admin && yarn dev",
    "start:core": "cd ./packages/Lighthouse-core && yarn dev",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "build": "yarn workspaces run build",
    "format": "prettier --write \"./packages/**/src/**/*{ts,tsx,js,jsx}\"",
    "lint": "eslint --fix \"./packages/**/src/**/*.{js,jsx,ts,tsx}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.9.0",
    "@typescript-eslint/parser": "^2.9.0",
    "eslint": "^6.7.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "typescript": "^3.7.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "dotenv": "^8.2.0"
  }
}
